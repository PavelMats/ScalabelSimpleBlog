@model ScalabelSimpleBlog.Models.BlogControllerModels.BlogControllerMostPopularViewModel

<h3>Most popular for last 14 days</h3>
<div class="list-group">
    @foreach (var item in Model.Articles)
    {
        <a href="@Url.Action("Article", "Blog", new{ articleId = item.Id, days = 14})" class='list-group-item'>
            <span class="badge">@item.ClicksCount</span>
            @item.Header
        </a>
    }
</div>