@model ScalabelSimpleBlog.Models.BlogControllerModels.BlogControllerLatestsCommentsViewModel

<h3>Latest comments</h3>
<div class="list-group">
    @foreach (var item in Model.Comments)
    {
        <p>
            @item.Body
        </p>
        <p>
            Author: @item.AuthorName
        </p>
        <a href="@Url.Action("Article", "Blog", new{articleId = item.ArticleId})" class="list-group-item">
            <span class="badge">@item.CreatedDate.RelativeDate()</span>
            @item.ArticleHeader
        </a>
    }
</div>
