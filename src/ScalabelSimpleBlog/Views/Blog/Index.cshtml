@model ScalabelSimpleBlog.Models.BlogControllerModels.BlogControllerIndexModel
@{
    ViewBag.Title = "Index";
    var prevPage = Model.CurrentPage - 1;
    var nextPage = Model.CurrentPage + 1;
}

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-2">
                @if (prevPage > 0)
                {
                    <a class="btn btn-default" href="@Url.Action("Index", "Blog", new { page = prevPage})">PREV PAGE</a>
                }
                else
                {
                    <a class="btn btn-default disabled" href="#">PREV PAGE</a>
                }
            </div>
            <div class="col-md-2 col-md-offset-8">
                <a class="btn btn-default" href="@Url.Action("Index", "Blog", new { page = nextPage})">NEXT PAGE</a>
            </div>
        </div>

        @foreach (var item in Model.Articles)
        {
            <div class="row">
                <div class="col-md-12">
                    <h2>@item.Header</h2>
                    <p>
                        @item.TeaserText
                    </p>
                    <p><a class="btn btn-default" href="@Url.Action("Article", "Blog", new{ articleId = item.Id })">More &raquo;</a></p>
                </div>
            </div>
        }
                <div class="row">
            <div class="col-md-2">
                @if (prevPage > 0)
                {
                    <a class="btn btn-default" href="@Url.Action("Index", "Blog", new { page = prevPage})">PREV PAGE</a>
                }
                else
                {
                    <a class="btn btn-default disabled" href="#">PREV PAGE</a>
                }
            </div>
            <div class="col-md-2 col-md-offset-8">
                <a class="btn btn-default" href="@Url.Action("Index", "Blog", new { page = nextPage})">NEXT PAGE</a>
            </div>
        </div>

    </div>
    <div class="col-md-4">
        @{ Html.RenderAction("TagsCounts", "Tag"); }
    </div>
</div>
